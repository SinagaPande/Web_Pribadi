---
/* src/components/Navbar.astro */
---

<header class="navbar-wrapper">
  <nav class="navbar" id="mainNav" aria-label="Main navigation">
    <a href="/" class="navbar__logo" aria-label="Jonathan Sinaga Logo">
      <svg viewBox="0 0 36 36" fill="none" aria-hidden="true" focusable="false">
        <rect x="6" y="6" width="24" height="24" rx="8" fill="#18181b"/>
        <path d="M13 13v10h10V13" stroke="#fff" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M13 13h10" stroke="#fff" stroke-width="2.2" stroke-linecap="round"/>
      </svg>
    </a>
    
    <div class="navbar__nav" id="navbarNav">
      <a href="/" class="navbar__link">Home</a>
      <a href="/cad" class="navbar__link">3D Designs</a>
      <a href="/game" class="navbar__link">Game Dev</a>
      <a href="/blender" class="navbar__link">3D Modeling</a>
      
      <button id="themeToggle" class="theme-toggle" aria-label="Toggle Dark Mode">
        <svg class="icon-sun" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
        <svg class="icon-moon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
      </button>
    </div>

    <button class="navbar__menu-toggle" id="menuToggle" aria-label="Open navigation menu" aria-controls="navbarNav" aria-expanded="false">
      <svg class="navbar__menu-icon" viewBox="0 0 28 28" aria-hidden="true" focusable="false">
        <rect y="5" width="28" height="3" rx="1.5" fill="currentColor"/>
        <rect y="12" width="28" height="3" rx="1.5" fill="currentColor"/>
        <rect y="19" width="28" height="3" rx="1.5" fill="currentColor"/>
      </svg>
    </button>
  </nav>
</header>

<style>
  /* === Header/Navbar Styles === */
  .navbar-wrapper {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000; /* Pastikan selalu di atas background */
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .navbar-wrapper--hidden {
    transform: translateY(-100%);
  }

  .navbar {
    width: 100%;
    max-width: 100%;
    margin: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 32px; 
    background: var(--glass-bg);
    backdrop-filter: blur(var(--glass-blur));
    -webkit-backdrop-filter: blur(var(--glass-blur));
    border-bottom: 1px solid var(--glass-border);
    box-sizing: border-box;
  }

  .navbar__logo svg { width: 40px; height: 40px; }
  .navbar__nav { display: flex; gap: 32px; }

  .navbar__link {
    text-decoration: none;
    color: var(--text-secondary);
    font-weight: 500;
    font-size: 0.95rem;
    transition: color 0.2s;
    padding: 0;
  }

  .navbar__link:hover, .navbar__link--active { color: var(--text-primary); }

  .navbar__link:focus-visible {
    outline: none;
    box-shadow: var(--focus-ring);
    border-radius: var(--radius-nav);
  }

  .navbar__menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-primary);
    padding: 0;
    margin-left: var(--space-2);
  }

  .navbar__menu-icon {
    width: 28px;
    height: 28px;
    display: block;
    fill: var(--text-primary);
  }

  /* --- Toggle Button Styles --- */
  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    color: var(--text-secondary);
    padding: 0;
    margin-left: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
  }
  .theme-toggle:hover { color: var(--text-primary); }
  
  :global([data-theme="light"]) .icon-sun { display: none; }
  :global([data-theme="dark"]) .icon-moon { display: none; }
  
  /* === Mobile Media Queries untuk Navbar === */
  @media (max-width: 768px) {
    .navbar { padding: 1rem 20px; }
    .navbar__menu-toggle { display: block; }
    .navbar__nav {
      display: none;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      background: #fff;
      flex-direction: column;
      padding: 20px;
      gap: 16px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.05);
      text-align: center;
    }
    .navbar__nav--open { display: flex; }
    .theme-toggle { margin-left: 0; padding: 8px 0; }
  }
</style>

<script>
  // === LOGIC THEME & MOBILE MENU ===
  const menuToggle = document.getElementById("menuToggle");
  const navbarNav = document.getElementById("navbarNav");
  const navbarWrapper = document.querySelector(".navbar-wrapper");
  const themeToggle = document.getElementById("themeToggle");

  if (themeToggle) {
    themeToggle.addEventListener("click", () => {
      const currentTheme = document.documentElement.getAttribute("data-theme");
      const newTheme = currentTheme === "dark" ? "light" : "dark";
      document.documentElement.setAttribute("data-theme", newTheme);
      localStorage.setItem("theme", newTheme);
    });
  }

  if (menuToggle && navbarNav) {
    menuToggle.addEventListener("click", () => {
      const isExpanded = navbarNav.classList.toggle("navbar__nav--open");
      menuToggle.setAttribute("aria-expanded", isExpanded ? "true" : "false");
    });
    document.addEventListener("click", (e) => {
      if (window.innerWidth < 768 && navbarNav.classList.contains("navbar__nav--open")) {
        // @ts-ignore
        if (!navbarNav.contains(e.target) && !menuToggle.contains(e.target)) {
          navbarNav.classList.remove("navbar__nav--open");
          menuToggle.setAttribute("aria-expanded", "false");
        }
      }
    });
  }

  // === Hide-on-Scroll Logic ===
  if (navbarWrapper) {
    let lastScrollY = window.scrollY;
    let ticking = false;
    const SCROLL_THRESHOLD = 50;
    const SCROLL_TOLERANCE = 5;

    function updateNavbar() {
      const currentScrollY = window.scrollY;
      const isMenuOpen = navbarNav?.classList.contains("navbar__nav--open");
      
      if (isMenuOpen) {
        ticking = false;
        return;
      }

      if (currentScrollY > lastScrollY + SCROLL_TOLERANCE && currentScrollY > SCROLL_THRESHOLD) {
        if (!navbarWrapper.classList.contains('navbar-wrapper--hidden')) {
          navbarWrapper.classList.add('navbar-wrapper--hidden');
        }
      } else if (currentScrollY < lastScrollY - SCROLL_TOLERANCE) {
        if (navbarWrapper.classList.contains('navbar-wrapper--hidden')) {
          navbarWrapper.classList.remove('navbar-wrapper--hidden');
        }
      }
      
      if (currentScrollY < SCROLL_THRESHOLD) {
        navbarWrapper.classList.remove('navbar-wrapper--hidden');
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    }

    window.addEventListener("scroll", () => {
      if (!ticking) {
        window.requestAnimationFrame(updateNavbar);
        ticking = true;
      }
    }, { passive: true });
  }
</script>