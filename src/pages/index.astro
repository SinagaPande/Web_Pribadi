---
import MainLayout from "../layouts/MainLayout.astro";
import "./index.css";
---

<MainLayout title="Jonathan Sinaga | 3D Designer & Game Developer">
  <section class="hero slide-in" aria-label="Hero Introduction">
    <div class="hero__content">
      <img
        src="/Imagery/icons/INGENTI_logo.webp"
        alt="INGENTI Logo"
        class="hero__logo"
        loading="eager"
      />
      <p class="hero__tagline">3D Designer & Game Developer</p>
    </div>

    <div class="hero__scroll">
      <span class="scroll-text">Scroll to Explore</span>
      <svg
        class="scroll-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><polyline points="6 9 12 
15 18 9"></polyline></svg
      >
    </div>
  </section>

  <section class="gateway" aria-label="Portfolio Categories">
    <div class="gateway__grid">
      <a href="/cad" class="gateway__card card--cad slide-in delay-1">
        <div class="card__visual">
          <img
            src="/Imagery/icons/SolidWorks_logo.webp"
            alt="SolidWorks Logo"
            loading="eager"
          />
        </div>
        <div class="card__label">
          <span class="card__title">CAD Portfolio</span>

          <span class="card__sub">Engineering & Design</span>
        </div>
      </a>

      <a href="/blender" class="gateway__card card--3d slide-in delay-2">
        <div class="card__visual">
          <img
            src="/Imagery/icons/Blender_Logo.webp"
            alt="Blender Logo"
            loading="eager"
          />
        </div>
        <div class="card__label">
          <span class="card__title">3D Modeling</span>
          <span class="card__sub">Artistic & Assets</span>
        </div>
      </a>

      <a
        href="/game"
        class="gateway__card gateway__card--wide card--game slide-in delay-3"
      >
        <div class="card__visual card__visual--dual">
          <img
            src="/Imagery/icons/Unity_logo.webp"
            alt="Unity Logo"
            loading="eager"
          />
          <div class="divider"></div>
          <img
            src="/Imagery/icons/Godot_logo.svg"
            alt="Godot Logo"
            loading="eager"
          />
        </div>
        <div class="card__label">
          <span class="card__title">Game Projects</span>
          <span class="card__sub">Interactive Experiences</span>
        </div>
      </a>
    </div>
  </section>

  <section class="intro slide-in delay-4" aria-labelledby="intro-title">
    <div class="intro__card">
      <div class="intro__visual">
        <img
          src="/Imagery/profile/foto_saya.webp"
          alt="Jonathan Sinaga"
          class="intro__photo"
        />
      </div>

      <div class="intro__content">
        <div class="intro__header">
          <h1 id="intro-title">Jonathan Sinaga</h1>
          <p class="intro__role">
            Developing Skills in 3D Design & Game Development
          </p>
        </div>

        <p class="intro__desc">
          Mahasiswa Teknik Informatika Institut Teknologi Sumatra angkatan 2023
          yang sedang mengeksplorasi desain 3D serta pengembangan game
        </p>

        <div class="intro__socials">
          <a
            href="mailto:jonathan.sinaga@email.com"
            class="social-btn"
            aria-label="Email"
          >
            <img
              src="/Imagery/icons/Gmail_logo.webp"
              alt="Gmail Icon"
              loading="lazy"
            />
          </a>

          <a
            href="https://instagram.com/"
            class="social-btn"
            aria-label="Instagram"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/Imagery/icons/Instagram_logo.webp"
              alt="Instagram Icon"
              loading="lazy"
            />
          </a>

          <a
            href="https://wa.me/6281234567890"
            class="social-btn"
            aria-label="WhatsApp"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/Imagery/icons/WhatsApp_logo.webp"
              alt="WhatsApp Icon"
              loading="lazy"
            />
          </a>
        </div>
      </div>
    </div>
  </section></MainLayout
>
