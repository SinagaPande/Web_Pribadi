---
import MainLayout from '../layouts/MainLayout.astro';
import '../styles/index.css'; // Import CSS spesifik halaman
---

<MainLayout title="Jonathan Sinaga | 3D Designer & Game Developer">
  
  <section class="gateway" aria-label="Portfolio Categories">
    <div class="gateway__grid">
      
      <a href="/cad" class="gateway__card slide-in delay-1">
        <div class="card__visual">
          <img src="/Imagery/icons/SolidWorks_logo.webp" alt="SolidWorks Logo" loading="eager">
        </div>
        <div class="card__label">
          <span class="card__title">CAD Portfolio</span>
          <span class="card__sub">Engineering & Design</span>
        </div>
      </a>

      <a href="/blender" class="gateway__card slide-in delay-2">
        <div class="card__visual">
          <img src="/Imagery/icons/Blender_Logo.webp" alt="Blender Logo" loading="eager">
        </div>
        <div class="card__label">
          <span class="card__title">3D Modeling</span>
          <span class="card__sub">Artistic & Assets</span>
        </div>
      </a>

      <a href="/game" class="gateway__card gateway__card--wide slide-in delay-3">
        <div class="card__visual card__visual--dual">
          <img src="/Imagery/icons/Unity_logo.webp" alt="Unity Logo" loading="eager">
          <div class="divider"></div>
          <img src="/Imagery/icons/Godot_logo.svg" alt="Godot Logo" loading="eager">
        </div>
        <div class="card__label">
          <span class="card__title">Game Projects</span>
          <span class="card__sub">Interactive Experiences</span>
        </div>
      </a>

    </div>
  </section>

<section class="intro slide-in delay-4" aria-labelledby="intro-title">
    <div class="intro__card">
      
      <div class="intro__visual">
        <img src="/Imagery/profile/foto_saya.webp" alt="Jonathan Sinaga" class="intro__photo">
      </div>

      <div class="intro__content">
        <div class="intro__header">
          <h1 id="intro-title">Jonathan Sinaga</h1>
          <p class="intro__role">Developing Skills in 3D Design & Game Development</p>
        </div>
        
        <p class="intro__desc">
          Mahasiswa Teknik Informatika Institut Teknologi Sumatra angkatan 2023 yang sedang mengeksplorasi desain 3D serta pengembangan game
        </p>
        
        <div class="intro__socials">
          <a href="mailto:jonathan.sinaga@email.com" class="social-btn" aria-label="Email">
             <img src="/Imagery/icons/Gmail_logo.webp" alt="Gmail Icon" loading="lazy">
          </a>
          
          <a href="https://instagram.com/" class="social-btn" aria-label="Instagram" target="_blank" rel="noopener">
             <img src="/Imagery/icons/Instagram_logo.webp" alt="Instagram Icon" loading="lazy">
          </a>
          
          <a href="https://wa.me/6281234567890" class="social-btn" aria-label="WhatsApp" target="_blank" rel="noopener">
             <img src="/Imagery/icons/WhatsApp_logo.webp" alt="WhatsApp Icon" loading="lazy">
          </a>
        </div>

    </div>
  </section>
</MainLayout>