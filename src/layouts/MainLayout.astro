---
// src/layouts/MainLayout.astro
import '../styles/variables.css'; 
import '../styles/base.css';      

import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import BackgroundManager from '../components/backgrounds/BackgroundManager.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <script is:inline>
    const theme = (() => {
      // 1. Cek apakah ada tema yang tersimpan di localStorage
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      // 2. Jika tidak ada, cek preferensi tema sistem (OS) pengguna
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      // 3. Default ke light mode
      return 'light';
    })();

    // Terapkan tema ke tag <html> sebelum body dirender
    document.documentElement.setAttribute('data-theme', theme);
  </script>
</head>
<body>

  <BackgroundManager />

  <Navbar />

  <main>
    <slot />
  </main>

  <Footer />

</body>
</html>